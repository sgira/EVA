<RelativeLayout android:padding="20dp" android:orientation="vertical" android:gravity="center" android:background="@color/white" android:layout_height="fill_parent" android:layout_width="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <Button android:padding="10dp"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/light_blue"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/follow_button"
        android:textAllCaps="false"
        android:onClick="followLocation"
        android:layout_gravity="center"
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:id="@+id/button3" />


    <Button android:padding="10dp"
        android:gravity="center"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/light_blue"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/share_button"
        android:textAllCaps="false"
        android:onClick="shareLocation"
        android:layout_gravity="center"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/button2"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/button3" />

</RelativeLayout>
