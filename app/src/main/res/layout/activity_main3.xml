<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wellness.eva.Main2Activity"
    android:background="#bcd2fa">

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton3"
        android:layout_marginTop="58dp"
        android:src="@drawable/heartattack"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView3" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton4"
        android:src="@drawable/choking"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/imageButton5"
        android:layout_alignStart="@+id/imageButton3" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton5"
        android:src="@drawable/burning"
        android:layout_below="@+id/imageButton3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart Attack"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageButton3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choking"
        android:id="@+id/textView4"
        android:layout_below="@+id/imageButton4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Burning"
        android:id="@+id/textView5"
        android:layout_below="@+id/imageButton5"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton6"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_alignParentEnd="true"
        android:src="@drawable/drowning"
        android:layout_marginRight="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drowning"
        android:id="@+id/textView6"
        android:layout_below="@+id/imageButton6"
        android:layout_alignStart="@+id/imageButton6"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Situations"
        android:id="@+id/textView7"
        android:textColor="#2958cf"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageButton7"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentStart="true"
        android:src="@drawable/close" />

    android:background="@null"

</RelativeLayout>
